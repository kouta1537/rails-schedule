<h3>予定一覧</h3>

<table>
    <thead>
        <tr>
            <th>id</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>更新日時</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_datetime.to_s(:datetime) %></td>
        <td><%= task.end_datetime.to_s(:datetime) %></td>
        <td><%= task.is_all_day ? '⚪︎': '' %></td>
        <td><%= task.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細",task %></td>
        <td><%= link_to "編集",[:edit,task  ] %></td>
        <td><%= link_to "削除",task,method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div>
    <p>予定の合計<%= @tasks.size%></p>

    <p>本日の日付 <%= Date.today.strftime("%Y年%m月%d日")%></p>
</div>

<p><%= link_to "予定の新規登録", :new_task %></p>
